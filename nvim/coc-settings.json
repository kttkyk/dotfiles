{
    "diagnostic.errorSign": "✘",
    "diagnostic.warningSign": "●",
    "diagnostic.infoSign": "●",

    "diagnostic.enable": true,
    "python.linting.enabled": true,

    "python.jediPath": "~/.virtualenvs/pynvim3/lib/python3.6/site-packages",
    "python.venvPath": "~/.virtualenvs",

    "python.linting.pylintEnabled": false,

    "python.linting.flake8Path": "~/.virtualenvs/pynvim3/bin/flake8",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--ignore=E731,E221,F401,E501"],


    "tssserver.enableJavascript": true,
    "eslint.filetypes": ["javascript", "typescript", "typescriptreact", "javascript.jsx", "typescript.tsx"],

    "html.format.enable": true,

    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
            "rootPatterns": [".ccls-root", "compile_commands.json"],
            "initializationOptions": {
                "cache": {
                    "directory": ".ccls-cache"
                }
            }
        }
    }
}
